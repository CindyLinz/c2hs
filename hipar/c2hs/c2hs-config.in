#!/bin/sh
# adapted from `gtk-config'

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: c2hs-config [OPTIONS] [LIBRARIES]
Options:
	[--system=HS]
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
	[--c2hs]
Libraries:
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

# default library and default system
#
lib_c2hs=yes
sys=ghc4

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --system=*)
      sys=$optarg
      ;;
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @C2HS_VERSION@
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --c2hs)
      echo_c2hs=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

libdir=@libdir@/c2hs-@C2HS_VERSION@
bindir=@bindir@

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_cflags" = "yes"; then
	cflags="-fglasgow-exts -package lang"
	echo -i$libdir/$sys/import $cflags
fi
if test "$echo_libs" = "yes"; then
	libsp="-package lang"
	libsa=""
	if test "$lib_c2hs" = "yes"; then
		libsp="$libsp -lc2hs"
	fi
	echo -L$libdir/$sys $libsp $libsa
fi
if test "$echo_c2hs" = "yes"; then
	echo $bindir/c2hs
fi
